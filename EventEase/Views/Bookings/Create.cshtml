@model EventEase.Models.Booking

@{
    ViewData["Title"] = "Create";
}

<h1>Make a new booking</h1>

<h4>Booking Details</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <!-- Form to create a new booking -->
        <form asp-action="Create">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- list for selecting Event -->
            <div class="form-group">
                <label class="control-label">Event</label> <!-- Label was set to "Event" -->
                <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventId"></select>
                <span asp-validation-for="EventId" class="text-danger"></span>
            </div>

            <!-- list for selecting Venue -->
            <div class="form-group">
                <label class="control-label">Venue</label> <!-- Label was set to "Venue" -->
                <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueId"></select>
                <span asp-validation-for="VenueId" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <label class="control-label">Booking Date</label> <!-- Label was set to "Booking Date" -->
                <input asp-for="BookingDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>

            <!-- Submit button to create the booking -->
            <div class="form-group mt-2">
                <input type="submit" value="Create Booking" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
