@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <h1 class="text-center mb-3">Event Ease - ST10318188</h1>

    <p class="text-center fs-5 mx-auto mb-5" style="max-width: 800px;">
        Event Ease is your go-to solution for managing venues, events, and bookings. Designed by Ronald Fell. 
    </p>

    <div class="row justify-content-center text-center">
        <div class="col-md-3 mb-4">
            <div class="p-3 rounded-4 shadow-sm h-100 d-flex flex-column justify-content-between"
                 style="background-color: rgba(255, 255, 255, 0.25);
                        backdrop-filter: blur(10px);
                        -webkit-backdrop-filter: blur(10px);
                        border: 1px solid rgba(255, 255, 255, 0.2);
                        min-height: 260px;">
                <div>
                    <h4>Venues</h4>
                    <p class="mb-3">The MVC Web app allows the user to add venues , edit or delete venue information.</p>
                </div>
                <!--Changes button text-->
                <a href="@Url.Action("Index", "Venues")" class="btn btn-outline-primary mt-2">Manage Venues</a>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="p-3 rounded-4 shadow-sm h-100 d-flex flex-column justify-content-between"
                 style="background-color: rgba(255, 255, 255, 0.25);
                        backdrop-filter: blur(10px);
                        -webkit-backdrop-filter: blur(10px);
                        border: 1px solid rgba(255, 255, 255, 0.2);
                        min-height: 260px;">
                <div>
                    <h4>Events</h4>
                    <p class="mb-3">The MVC Web App allows the user to upload events , edit or delete events.</p>
                </div>
                <!--Changes button text-->
                <a href="@Url.Action("Index", "Events")" class="btn btn-outline-primary mt-2">Manage Events</a>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="p-3 rounded-4 shadow-sm h-100 d-flex flex-column justify-content-between"
                 style="background-color: rgba(255, 255, 255, 0.25);
                        backdrop-filter: blur(10px);
                        -webkit-backdrop-filter: blur(10px);
                        border: 1px solid rgba(255, 255, 255, 0.2);
                        min-height: 260px;">
                <div>
                    <h4>Bookings</h4>
                    <p class="mb-3">Bookings link an event to a venue and with a date.</p>
                </div>
                <!--Changes button text-->
                <a href="@Url.Action("Index", "Bookings")" class="btn btn-outline-primary mt-2"> Manage Bookings</a>
            </div>
        </div>
    </div>
</div>
