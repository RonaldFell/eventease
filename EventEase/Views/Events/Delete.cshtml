@model EventEase.Models.Event

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Event</h1>


<h3>Are you sure you want to remove this event ?</h3>

<div>
  
    <h4>Event</h4>
    <hr />

    <!-- Displays before deletion -->
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageUrl)
        </dd>
    </dl>

    <!-- Handles page that shows when deleting event -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="EventId" />
        <input type="submit" value="Confirm Event Removal" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

